<header class="navbar navbar-fixed-top">
  <div class="navbar-inner nav-collapse">
    <div class="container">
      <%= link_to image_tag("wir_logo.png", alt: "logo"), root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <!-- <form class="navbar-search">
            <input type="text" class="search-query span3" >
            <div class="icon-search"></div>
          </form> -->
          <% if user_signed_in? %>
            <%= form_tag stories_path, method: :get, :class => "navbar-search" do %>
              <%= text_field_tag :query, params[:query], :placeholder => "search", :value => '', :class => "search-query span3" %>
              <div class="icon-search"></div>
            <% end %>
          <% end %>
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "About", about_path %></li>          
          <% if user_signed_in? %>
            <li><%= link_to "#{pluralize( "(" + current_user.unseen_alerts.to_s + ")", "Alert")}", notifications_path %></li> 
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li class="dropdown-links"><%= link_to "Profile", root_path %></li>
                <li class="dropdown-links"><%= link_to "Edit Profile", settings_path %></li>
                <li class="divider"></li>
                <li class="dropdown-links"><%= link_to "Users", users_path %></li>
                <li class="divider"></li>
                <li class="dropdown-links">
                  <%= link_to "Sign out", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Sign in", login_path %></li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>