<li id="<%= feed_item.id %>">
	
	<%= link_to avatar_for(feed_item.user, 'thumb'), feed_item.user %>

	<span class="username">
		<%= link_to feed_item.user.username, feed_item.user %>
	</span>
	<span class="delete">
		<% if current_user?(feed_item.user) %>
			<%= link_to feed_item, method: :delete,
									data: {confirm: "You sure!"},
									title:feed_item.content do %>
				<i class="icon-remove"></i>
			<% end %>
		<% end %>
	</span> 
	<span class="story-<%= feed_item.id %>">
		<span class="content">
			<span class="title">
				<%= link_to feed_item.title, story_path(feed_item) %>			
			</span>

			<% if feed_item.content_image? %>
				<span class="story-image">
					<%= image_tag feed_item.content_image.url(:small) %>
				</span>
			<% end %>

			<%= feed_item.content %>
		</span>
	</span>

	<span class="input-bar">
		<span class="vote-<%= feed_item.id %>">
			<%= render partial: "shared/vote", locals: {feed_item: feed_item} %>		
		</span>
		<span class="comment-btn">
			<%= link_to story_path(feed_item) do %>comments (<%= feed_item.comments.count %>)
			<i class="icon-comments"></i><% end %>
		</span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
		</span>
	</span>
</li>

<span class="comments-<%= feed_item.id %>">
</span>
