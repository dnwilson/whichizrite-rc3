<% if feed_item.votes_for == feed_item.votes_against %>
    <span class="votecount" style= "background-color:#ccc"><%= feed_item.votes_for - feed_item.votes_against %></span>
<% elsif feed_item.votes_for < feed_item.votes_against %>
    <span class="votecount" style= "background-color:#cc0000">whichizwrong <%= feed_item.votes_against - feed_item.votes_for %></span>
<% else %>
	<span class="votecount" style= "background-color:#33cc00">whichizrite <%= feed_item.votes_for - feed_item.votes_against %></span>
<% end %>

<%= subscribe_to("/#{current_user.id}/votes") %>
<% current_user.all_following.each do |subscriber| %>
    <%= subscribe_to("/#{subscriber.id}/votes") %>
<% end %>