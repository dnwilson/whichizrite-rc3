<ol class="comments-list" id="comments-section">
	<% @story.comments.each do |comment| %>
		<li class="panel" id="<%= comment.id %>">
			<div class="panel-heading">
				<%= link_to avatar_for(comment.user, 'xsml'), comment.user, class: "panel-avatar" %><span class="comment-user"><%= link_to comment.user.username, user_path(comment.user) %>
				<% if current_user == comment.user %></span>
					<span class="delete-btn mar-top5" style="float:right;">
					 	<%= link_to comment, method: :delete do %>
							<i class="icon-remove"></i>
						<% end %>
					</span>
				<% end %>
			</div>
			<div class="panel-body">
				<%= comment.comment_html %>
				<hr>
				<div class="comment-time">
					<%= time_ago_in_words(comment.created_at) %> ago.
				</div>
			</div>
		</li>
	<% end %>
</ol>