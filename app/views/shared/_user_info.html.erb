<span class="avatar">
	<a href="<%= user_path(current_user) %>">
		<%= avatar_for(current_user, "thumb") %>
	</a>
</span>

<span class="user-info">
	<h2>
		<%= current_user.username %>
	</h2>
	<span>
		<%= link_to "view my profile", current_user %>
	</span><br />
</span>

<span class="user-stats">
	<span>
		<%= pluralize(current_user.stories.count, "story") %>
	</span>
</span>