<div class="login">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		<%= f.text_field :login, placeholder: 'Email/Username' %>
		<%= f.password_field :password, placeholder: 'Password' %>
		<%= f.input_field :remember_me, as: :boolean, inline_label: 'Remember me'%>		  
	  	<%= f.submit 'Sign in', class: "btn login-btn btn-primary"  %><br>
	  	<%= link_to "Forgot your password?", new_password_path('user'), class: "pull-left" %>	  	
	<% end %>
</div>

