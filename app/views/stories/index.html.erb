<% provide(:title, "Search Results") %>
<section class="search-page container">
	<div class="col-md-12 col-sm-12">
		<div class="row">
			<div class="col-md-8 col-sm-8 col-xs-12">
				<div class="panel">
					<h3 class="mar-bot10 mar-top10" style="margin-left: 20px;">Search results for "<%= @query %>"</h3>
				</div>
				<% if @pg_search_documents.any? %>
					<ol class="stories">
						<% @pg_search_documents.each do |search_item| 
						story = Story.find(search_item.searchable_id) %>
							<%= render partial: 'story', locals: {story: story} %>
					<% end %>
					</ol>
				<% else %>
					<div class="panel panel-default">
						<div class="panel-heading">
							<h4>Could not find anything matching what you searched for.</h4>
						</div>
					</div>
				<% end %>
			</div>

			<div class="col-md-4 col-sm-4 hidden-xs">
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4>Ads</h4>
					</div>
					<div class="panel-body">
						<p>Place Ads Here</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>