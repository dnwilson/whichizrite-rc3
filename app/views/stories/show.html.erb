<% if signed_in? %>
	<div class="row-fluid">
		<div class="span8">
			<span class="story-item">
				<%= link_to avatar_for(@story.user, 'thumb'), @story.user %>

				<span class="username">
					<%= link_to @story.user.username, @story.user %>
				</span>
				<span class="delete">
					<% if current_user.id == (@story.origin_user_id) %>
						<%= link_to @story, method: :delete,
												data: {confirm: "You sure!"},
												title:@story.title do %>
							<i class="icon-remove"></i>
						<% end %>
					<% end %>
				</span>
				
				<span class="content">
					<span class="title">
						<%=  @story.title %>				
					</span>
					<%= @story.content_html %>
				</span>

				<span class="input-bar">
					<span class="vote-<%= @story.id %>">
						<%= render partial: "shared/vote", locals: {feed_item: @story} %>		
					</span>
					<span class="comment-btn">
						<%= link_to story_path(@story) do %>comments (<%= @story.comments.count %>)
						<i class="icon-comments"></i><% end %>
					</span>
					<span class="timestamp">
						Posted <%= time_ago_in_words(@story.created_at) %> ago.
					</span>
				</span>
				<%= render 'shared/comments' %>
				<% if current_user.following?(@story.user) || current_user == @story.user %>
					<span class="comment-form">
						<%= render 'shared/comment_form' %>
					</span>
				<% end %>
			</span>			
		</div>

		<div class="span4">					
			
		</div>
	</div>
<% else %>
	<%= render 'pages/welcome' %>
<% end %>