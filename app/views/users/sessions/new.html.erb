<div class="hero-unit">
	<div class="signin">
		<h2>whichizrite sign in</h2>

		<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		  <div><%= f.email_field :login, placeholder: 'Email/Username' %></div>

		  <div><%= f.password_field :password, placeholder: 'Password' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.input_field :remember_me, as: :boolean, inline_label: '  Remember me' %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in" %><%= render "devise/shared/links" %></div>
		<% end %>
	</div>
</div>