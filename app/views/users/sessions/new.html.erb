<% provide(:title, 'Login') %>
<section class="signin container">
	<div class="col-md-12 col-sm-12">
		<div class="row">
			<div class="col-md-offset-3 col-md-6">
				<%= simple_form_for(resource, :as => resource_name, :validate => true, :url => session_path(resource_name), :html => {class: "panel panel-default"}) do |f| %>
				
					<div class="panel-heading">
						<h2>Login</h2>
					</div>
					<div class="panel-body mar-top20">
						<div><%= f.email_field :login, placeholder: 'Email/Username' %></div>

						<div><%= f.password_field :password, placeholder: 'Password' %></div>

						<% if devise_mapping.rememberable? -%>
						<div><%= f.input_field :remember_me, as: :boolean, inline_label: '  Remember me' %></div>
						<% end -%>
						<%= f.submit "Sign in", class: "btn btn-primary mar-top10 submit-btn" %>
						<div class="mar-top20 mar-bot20">
							<%= render "users/shared/links" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</section>