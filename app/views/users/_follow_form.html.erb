<% unless current_user?(@user) %>

<div id="follow_form">
  <% if current_user.following?(@user) %>
    <%= link_to "Unfollow", unfollow_user_path(@user), remote: true, :class => "btn btn-large" %>
  <% elsif current_user.pending?(@user) %>
  	<%= link_to "Pending", unfollow_user_path(@user), remote: true, :class => "btn btn-large" %>
  <% else %>
    <%= link_to "Follow", follow_user_path(@user), remote: true, :class => "btn btn-large btn-primary" %>
  <% end %>
</div>

<% end %>